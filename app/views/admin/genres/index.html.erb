admin/genres#index
<%# ジャンル追加 %>
<h2>ジャンル一覧・追加</h2>
  <%= form_for(@genre, url: admin_genres_path) do |f| %>
    <h4>ジャンル</h4>
      <%= f.text_field :name %>
    <%= f.radio_button :is_active, :false %>
    <%= f.label :無効, class: "is_active_label" %>
    <%= f.radio_button :is_active, :true, checked: true%>
    <%= f.label :有効, class: "is_active_label"%>
<%= f.submit "追加",class: "btn btn-info btn-sm"%>
<% end %>



<%# ジャンル一覧機能 %>
<table class="table table-hover table-inverse">
  <tr>
    <th>ジャンル</th>
    <th>状態</th>
  </tr>
<% @genres.each do |genre| %>
<tr>
  <td class="name"><%= genre.name %></td>
  <td>
    <% if genre.is_active == true %>
     有効
    <% else %>
    無効
    <% end %>
  </td>
  <td><%=link_to "編集する", edit_admin_genre_path(genre),class: "btn btn-primary btn-sm"%>
  <td>
</tr> 
<% end %> 

</table>




    
