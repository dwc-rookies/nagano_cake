<div class="container">

  <%# ジャンル追加 %>
  <div class="row">
    <h4 class="mt-4 ml-5 mb-5">ジャンル一覧・追加</h4>
  </div>
  <%= form_for(@genre, url: admin_genres_path) do |f| %>
  <div class="row">
    <div class="mx-2">
      <label class="mx-1">ジャンル</label>
      <%= f.text_field :name %>
    </div>
    <div class="mx-2">
      <%= f.radio_button :is_active, :true, checked: true%>
      <%= f.label :有効, class: "is_active_label"%>
    </div>
    <div class="mx-2">
      <%= f.radio_button :is_active, :false %>
      <%= f.label :無効, class: "is_active_label" %>
    </div>
    <%= f.submit "追加",class: "btn btn-primary btn-sm mx-2"%>
  </div>

  <% end %>


  <%# ジャンル一覧機能 %>
  <div class="row mt-4">
    <div class="col-sm-5">
      <table class="table table-striped table-hover mb-5">
        <tr>
          <th>ジャンル</th>
          <th>状態</th>
          <th></th>
        </tr>
        <% @genres.each do |genre| %>
        <tr>
          <td class="name"><%= genre.name %></td>
          <td>
            <% if genre.is_active == true %>
            有効
            <% else %>
            無効
            <% end %>
          </td>
          <td>
            <%=link_to "編集する", edit_admin_genre_path(genre),class: "btn btn-primary btn-sm"%>
          </td>
        </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>