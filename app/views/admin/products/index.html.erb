<h2>商品一覧</h2>
<%= link_to new_admin_product_path do %>商品新規登録<% end %>
<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>商品ID</th>
      <th>商品名</th>
      <th>税抜価格</th>
      <th>ジャンル</th>
      <th>ステータス</th>
    </tr>
  </thead>
  <tbody>
    <% @products.each do |product| %>
    <tr>
    <td><%= product.id %></td>
      <td>
        <%= link_to admin_product_path(broduct.id) do %>
        <%= product.name %>
        <% end %>
      </td>
      <td><%= product.tax_excluded_price %></td>
      <td><%= product.genre.name %></td>
      <td>
      <% if product.is_active == true %>販売中
      <% else %>販売停止中
      <% end %>
    </tr>
    <% end %>
  </tbody>
</table>