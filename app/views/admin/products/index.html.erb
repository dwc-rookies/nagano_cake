<div class="container">
  <div class="m-4"></div>
  <div class="row">
    <div class="col-lg-12">
      <h4 class="mt-4 ml-5">商品一覧</h4>
      <%= link_to new_admin_product_path do %>
      <div class="float-right">
        <button type="button" class="btn btn-light rounded-circle p-0 m-1" style="width:2rem;height:2rem;">
          <h4>＋</h4>
        </button>
      </div>
      <% end %>
      <table class="table table-striped table-hover mb-5">
        <thead>
          <tr>
            <th>商品ID</th>
            <th>商品名</th>
            <th>税抜価格</th>
            <th>ジャンル</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @products.each do |product| %>
          <tr>
            <td class="p-3"><%= product.id %></td>
            <td class="p-3">
              <%= link_to admin_product_path(product.id) do %>
              <%= product.name %>
              <% end %>
            </td>
            <td class="p-3"><%= product.tax_excluded_price %></td>
            <td class="p-3"><%= product.genre.name %></td>
            <td class="p-3">
              <% if product.is_active == true %>販売中
              <% else %>販売停止中
              <% end %>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>