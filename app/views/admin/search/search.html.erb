<div class="container">
  <div class="m-4"></div>
  <div class="row">
    <div class="col-lg-12">
      <h4 class="mt-4 ml-5 mb-2">商品検索結果</h4>
      <table class="table table-striped table-hover mb-5">
        <thead>
          <tr>
            <th>商品ID</th>
            <th>商品名</th>
            <th>税抜価格</th>
            <th>ジャンル</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @products.each do |product| %>
          <tr>
            <td class="p-3"><%= product.id %></td>
            <td class="p-3">
              <%= link_to admin_product_path(product.id) do %>
              <%= product.name %>
              <% end %>
            </td>
            <td class="p-3"><%= product.tax_excluded_price.to_s(:delimited) %></td>
            <td class="p-3"><%= product.genre.name %></td>
            <td class="p-3">
              <% if product.is_active == true %>販売中
              <% else %>販売停止中
              <% end %>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
      <div class="col-sm-12">
    <h4 class="mt-4 ml-5 mb-2">会員検索結果</h4>
      <table class="table table-striped table-hover mb-5">
        <tr>
          <th>会員ID</th>
          <th>氏名</th>
          <th>メールアドレス</th>
          <th>ステータス</th>
        </tr>
        <% @customers.each do |customer| %>
        <tr>
          <td><%= customer.id %></td>
          <td><%= link_to admin_customer_path(customer) do %>
            <%= customer.first_name%>
            <%= customer.last_name%>
            <% end %>
          </td>
          <td><%= customer.email%></td>
          <td><% if customer.is_deleated==false %>
            有効
            <%else%>
            退会済み
            <% end %>
          </td>
        </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>
