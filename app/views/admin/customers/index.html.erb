<div class="container">

  <!--会員一覧表示-->
  <div class="row">
      <div class="col-sm-4 offset-sm-1">
    <h4 class="mt-5 ml-5 mb-4">会員一覧</h4>
  </div>

  </div>
  <div class="row">
    <div class="col-sm-8 offset-sm-2">
      <table class="table table-striped table-hover mb-5">
        <tr>
          <th>会員ID</th>
          <th>氏名</th>
          <th>メールアドレス</th>
          <th>ステータス</th>
        </tr>
        <% @customers.each do|customer| %>
        <tr>
          <td><%= customer.id %></td>
          <td><%= link_to admin_customer_path(customer) do %>
            <%= customer.first_name%>
            <%= customer.last_name%>
            <% end %>
          </td>
          <td><%= customer.email%></td>
          <td><% if customer.is_deleated==false %>
            有効
            <%else%>
            退会済み
            <% end %>
          </td>
        </tr>
        <% end %>
      </table>
      <%= paginate @customers %>
    </div>
  </div>
</div>
