<div class="container">
  <h2>注文履歴一覧</h2>
  <table class="table table-striped table-hover">
    <tr>
      <th>購入日時</th>
      <th>購入者</th>
      <th>注文個数</th>
      <th>注文ステータス</th>
    </tr>
    <% @orders.each do |order| %>
    <tr>
      <td>
        <%= link_to admin_order_path(order.id) do %>
        <%= order.created_at.strftime('%Y/%m/%d %H:%M:%S') %>
        <% end %>
      </td>
      <td><% order.customer.first_name+order.customer.last_name %></td>
      <td>
      <% order.ordered_products.sum(:quantity) %>
      </td>
      <td>
        <% case order.status %>
        <% when 0 %>入金待ち
        <% when 1 %>入金確認
        <% when 2 %>制作中
        <% when 3 %>発送準備中
        <% when 4 %>発送済み
      </td>
    </tr>
    <% end %>
  </table>
</div>