<div class="container">
  <h2>ショッピングカート</h2>
  <% if @cart_items.present? %>
  <button type="button" class="btn btn-danger btn-md">
    <%= link_to "空にする", delete_all_cart_items_path, method: :delete %>
  </button>
  <table class="table table-hover mt-3">
    <tbody>
      <tr>
        <th>商品名</th>
        <th>単価（税込）</th>
        <th>数量</th>
        <th>小計</th>
        <th></th>
        <th></th>
      </tr>
      <% total=0 %>
      <% @cart_items.each do |cart_item| %>

      <tr>
        <td>
          <%= attachment_image_tag cart_item.product,:image, :fill, 60, 60, format: 'jpeg', fallback: "no_image.jpg", :width => "60", :height => "60" %><%= cart_item.product.name %>
        </td>
        <td><%= price = (cart_item.product.tax_excluded_price * 1.1).floor %></td>
        <td><%= form_for(cart_item, url:cart_item_path(cart_item), html: {method: "patch"}) do |f| %>
          <%= f.text_field :quantity %>
          <%= f.submit "数量を変える" %>
          <% end %>
          <% if @update_cart_items == cart_item.id %>
          <span class="badge badge-pill badge-success">更新しました</span>
          <%= @update_cart_items = nil %>
          <% end %>
        </td>
        <td><%= price * cart_item.quantity %></td>
        <td><button type="button" class="btn btn-success btn-sm">
            <%= link_to "destroy",cart_item_path(cart_item), method: :delete %>
          </button></td>
      </tr>
      <% total = price * cart_item.quantity + total %>
      <% end %>
    </tbody>
  </table>

  <div class="text-right">
    <h3 class="mb-4">合計金額<%= total %>円</h3>
  </div>
  <% else %>
  <h4>カートは空です。</h4>
  <% end %>

  <div class="text-right">
    <%= link_to '買い物を続ける', root_path, class: "btn btn-primary mr-3" %>
    <%= link_to '情報入力へ進む', new_order_path, class: "btn btn-primary" %>
  </div>
</div>