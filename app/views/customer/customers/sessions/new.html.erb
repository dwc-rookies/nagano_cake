<div class="container">

<div class="row">
  <div class="mt-5 col offset-sm-2">
<strong class="mt-5 ml-5 mb-4 bg-light">会員の方はこちらからログイン</strong>
  </div>
</div>

<div class="row">
  <div class="mt-5 offset-4">
<%= flash[:error] %>
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

<div class="field">
  <%= f.label "メールアドレス" %><br>
  <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
</div>

<div class="field">
  <%= f.label "パスワード" %><br>
  <%= f.password_field :password, autocomplete: "current-password" %>
</div>

<% if devise_mapping.rememberable? %>
<div class="field">
  <%= link_to "＝＞パスワードを忘れた方はこちら", root_path %><br>
</div>

<div class="action-box">
  <div class="actions"><br>
    <%= f.submit "ログイン", class: "btn btn-default" %>
  </div>
</div>
<% end %>

  </div>
 </div>  

  <div class="row">
    <div class="mt-3 col offset-sm-2">
      <strong class="mt-3 ml-5 bg-light">登録がお済みでない方</strong>
    </div>
  </div>
  
  <div class="offset-3">
  <%= render "customer/customers/shared/links" %>
  <% end %>
  </div>
  
  </div>
</div>
