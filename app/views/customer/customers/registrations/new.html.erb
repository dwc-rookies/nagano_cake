<h2>新規会員登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "customer/customers/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label "名前" %>
    <%= f.label "(姓)", class:"first_name" %>
    <%= f.text_field :first_name, placeholder: "山田" %>
    <%= f.label "(名)" %>
    <%= f.text_field :last_name, placeholder: "花子" %>
  </div>

  <div class="field">
  　<%= f.label "フリガナ" %>
    <%= f.label "(セイ)", class:"first_name_kana" %>
    <%= f.text_field :first_name_kana, placeholder: "ヤマダ" %>
    <%= f.label "(メイ)" %>
    <%= f.text_field :last_name_kana, placeholder: "ハナコ" %>
  </div>

  <div class="field"><br>
    <%= f.label "メールアドレス" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email"%>
  </div>

  <div class="field"><br>
    <%= f.label "郵便番号（ハイフンなし）" %>
    <%= f.text_field :postcode %>
  </div>

  <div class="field"><br>
    <%= f.label "住所" %>
    <%= f.text_field :address %>
  </div>

  <div class="field"><br>
    <%= f.label "電話番号（ハイフンなし）" %>
    <%= f.text_field :phone_number %>
  </div>
  
  <div class="field"><br>
    <%= f.label "パスワード" %>
    <%= f.password_field :password, autocomplete: "new-password" %><br>
  </div>

  <div class="field"><br>
    <%= f.label "パスワード（確認用）" %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %><br>
  </div>

  <div class="action-box">
    <div class="actions"><br>
    <%= f.submit "新規登録", class: "btn btn-default" %>
  </div>
        
  <h3>既に登録済みの方</h3>

  <%= render "devise/shared/links" %>
</div>

<% end %>
  </div>
  </div>
  </div>

    