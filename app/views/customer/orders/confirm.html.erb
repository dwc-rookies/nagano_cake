<h1>注文情報確認</h1>
<%= form_for (@order, url: orders_path) %>
	<table>
		<thead>
			<tr>
				<th>商品名</th>
				<th>単価（税込）</th>
				<th>数量</th>
				<th>小計</th>
			</tr>
		</thead>
		<tbody>
			<% @cart_items.each do |cart_item| %>
			<tr>
				<td><%= attachment_image_tag cart_item.product,:image, :fill, 60, 60, format: 'jpeg', fallback: "no_image.jpg", :width => "60", :height => "60" %><%= cart_item.product.name %></td>
				<td><%= cart_item.price %></td>
				<td></td>
				<td></td>
			</tr>
		</tbody>
	</table>




<% end %>



