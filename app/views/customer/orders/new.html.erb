<h2>注文情報入力</h2>
<%= form_for(@order, url: confirm_order_path) do |f| %>

  <h4>支払方法</h4>
  <%= f.radio_button :pay, :credit_card %>
  <%= f.label :クレジットカード　%>
  <%= f.radio_button :pay, :bank_transfer %>
  <%= f.label :銀行振込　%>

  <h4>お届け先</h4>
   <%= radio_button_tag :delivery_address_type, "ご自身の住所" %>
   <%= f.label(:delivery_address, "ご自身の住所") %>
   <p><%= "〒" + current_customer.postcode + current_customer.address + current_customer.first_name + current_customer.last_name %></p>
  

   <%= radio_button_tag :delivery_address_type, "登録済み住所から選択" %>
   <%= f.label(:delivery_address, "登録済み住所から選択") %>
   <%= f.fields_for @delivery do |t| %>
     <p><%= t.select(:id, current_customer.deliveries.map{|delivery| [delivery.postcode+delivery.address+delivery.name] }) %></p>
   <% end %>

  
  <%= radio_button_tag :delivery_address_type, "新しいお届け先" %>
  <%= f.label(:delivery_address, "新しいお届け先") %>
    <h4>郵便番号(ハイフンなし)</h4>
    <%= f.text_field :postcode %>
    <h4>住所</h4>
    <%= f.text_field :address %>
    <h4>宛名</h4>
    <%= f.text_field :name %>



　<%= f.submit '確認画面に進む' %>
<% end %>

