<div class="containar">
	
      
		<h3 class="m-5">配送先登録 / 一覧</h3>
	<div class="row m-5">
		<%= form_for(@delivery) do |f| %>
		
			<div class="form_group row">
		      <%= f.label :"郵便番号(ハイフンなし)", class: "control-label col-lg-2" %>
		      <div class="col-lg-3">
		         <%= f.text_field :postcode, class: "form-control" %>
		      </div>
		    </div>
		    <div class="form_group row mt-3">
		     <%= f.label :住所, class: "control-label col-lg-2" %>
		     <div class="col-lg-6">
		       <%= f.text_field :address, class: "form-control" ,:size => 50*50 %>
		     </div>
		    </div>
		    
		    <div class="form_group row mt-3">
		    	<%= f.label :宛名, class: "control-label col-lg-2" %>
		     <div class="col-lg-3">
		         <%= f.text_field :name, class: "form-control" %>
		     </div>
		    </div>
		
		    <%= f.submit '登録する', class: "btn btn-success mt-4" %>
		<% end %>
	</div>

	<div class="row m-5">
		<!-- 配送先一覧　-->
		<table class="table">
			<thead>
				<tr>
					<th scope="col">郵便番号</th>
					<th scope="col">住所</th>
					<th scope="col">宛名</th>
					<th scope="col"></th>
					<th scope="col"></th>
				</tr>
			</thead>
			<tbody>
				<% @deliveries.each do |delivery| %>
					<tr>
						<td><%= delivery.postcode %></td>
						<td><%= delivery.address %></td>
						<td><%= delivery.name %></td>
						<td><%= link_to '編集する', edit_delivery_path(delivery.id), {class: "btn btn-primary"} %></td>
						<td><%= link_to '削除する', delivery_path(delivery.id),method: :delete, "date-confirm" => "削除しますか？", class: "btn btn-danger" %></td>
					</tr>
				<% end %>
			</tbody>
		</table>
	</div>
</div>



