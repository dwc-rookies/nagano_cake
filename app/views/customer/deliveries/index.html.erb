<h2>配送先登録 / 一覧</h2>

<%= form_for(@delivery) do |f| %>
    <h4>郵便番号</h4>
    <%= f.text_field :postcode %>
    <h4>住所</h4>
    <%= f.text_field :address %>
    <h4>宛名</h4>
    <%= f.text_field :name %>
    <%= f.submit '登録する' %>
<% end %>

<!-- 配送先一覧　-->
<table>
	<thead>
		<tr>
			<th>郵便番号</th>
			<th>住所</th>
			<th>宛名</th>
		</tr>
	</thead>
	<tbody>
		<% @deliveries.each do |delivery| %>
			<tr>
				<td><%= delivery.postcode %></td>
				<td><%= delivery.address %></td>
				<td><%= delivery.name %></td>
			</tr>
		<% end %>
	</tbody>
</table>



