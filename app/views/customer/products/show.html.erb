<div class="container">
  <div class="row">
    <div class="col-xs-3">
      <table>
        <tr>
          <th>ジャンル検索</th>
        </tr>
        <% @genres.each do |genre| %>
        <tr>
          <td>
            <%= link_to products_path(genre_id: genre.id) do %>
            <%= genre.name %></td>
          <% end %>
        </tr>
        <% end %>
      </table>
    </div>
    <div class="col-xs-9">
      <%= attachment_image_tag @product, :image, :fill, 300,300, format: "jpeg", class: "pull-left profile-img", fallback: "no_image.jpg", :width => "300", :height => "300" %>
      <h2><%= @product.name %></h2>
      <h4>商品説明</h4>
      <%= @product.description %>
      <h2>¥<%= (@product.tax_excluded_price*1.1).floor.to_s(:delimited) %>(税込)</h2>
      <% if customer_signed_in? %>
      <%= form_for(@cart_item) do |f| %>
      <%= f.hidden_field :customer_id, :value => current_customer.id %>
      <%= f.hidden_field :product_id, :value => @product.id %>
      <%= f.select :quantity, [1,2,3,4,5] %>
      <%= f.submit "カートに入れる" %>
      <% end %>
      <% end %>
    </div>
  </div>
</div>