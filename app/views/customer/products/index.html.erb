<div class="container">
  <div class="row">
    <div class="col-xs-3">
      <table>
        <tr>
          <th>ジャンル検索</th>
        </tr>
        <% @genres.each do |genre| %>
        <tr>
          <td>
            <%= link_to products_path(genre_id: genre.id) do %>
            <%= genre.name %></td>
          <% end %>
        </tr>
        <% end %>
      </table>
    </div>
    <div class="col-xs-9">
      <h3>商品一覧</h3>
      <div class="row">
        <% @products.each do |product| %>
        <% if product.genre.is_active == true %>
        <div class="col-sm-3">
          <%= link_to product_path(product.id) do %>
          <%= attachment_image_tag product, :image, :fill, 200, 150, fallback: "no_image.jpg", :width => "200", :height => "150" %><br>
          <%= product.name %>
          <%= (product.tax_excluded_price * 1.1).floor %>円
          <% end %>
        </div>
        <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>
<%= paginate @products %>