<div class="container">
  <div class="row mt-5">
    <div class="col-sm-2">
      <table class="table table-borderless border border-dark">
        <tr>
          <th class="border border-dark">ジャンル検索</th>
        </tr>
        <% @genres.each do |genre| %>
        <tr>
          <td>
            <%= link_to products_path(genre_id: genre.id) do %>
            <%= genre.name %></td>
          <% end %>
        </tr>
        <% end %>
      </table>
    </div>
    <div class="col-lg-10">
      <h3 class=""><%= @genre_name %>一覧<span class="small">(全<%= @products_count %>件)</span></h3>
      <div class="row">
        <% @products.each do |product| %>
        <div class="col-sm-3">
          <div class="p-4">
            <%= link_to product_path(product.id) do %>
            <%= attachment_image_tag product, :image, :fill, 200, 150, fallback: "no_image.jpg", :width => "200", :height => "150" %><br>
            <span><%= product.name %></span><br>
            <span><%= (product.tax_excluded_price * 1.1).floor.to_s(:delimited) %>円</span>
            <% end %>
          </div>
        </div>
        <% end %>
      </div>
      <div class="mb-5">
        <%= paginate @products %>
      </div>
    </div>
  </div>
</div>