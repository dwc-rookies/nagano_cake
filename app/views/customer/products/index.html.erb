<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <h3>商品一覧</h3>
      <div class="row">
        <% @products.each do |product| %>
        <div class="col-sm-3">
          <%= link_to product_path(product.id) do %>
          <%= attachment_image_tag product, :image, :fill, 200, 150, fallback: "no_image.jpg", :width => "200", :height => "150" %><br>
          <%= product.name %>
          <%= product.tax_excluded_price %>円
          <% end %>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>